# 环境变量配置示例
# 复制此文件为 .env 并填写实际值

# 数据库配置
DB_TYPE=sqlite  # mysql, postgresql, sqlite
DB_HOST=localhost
DB_PORT=3306
DB_NAME=drug_sales
DB_USER=root
DB_PASSWORD=your_password

# API 配置
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# MLflow 配置
MLFLOW_TRACKING_URI=mlruns
MLFLOW_EXPERIMENT_NAME=drug_sales_forecast

# 日志配置
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# 模型配置
DEFAULT_MODEL=lightgbm
MODEL_DIR=models

# 其他配置
PYTHONPATH=.
TZ=Asia/Shanghai
